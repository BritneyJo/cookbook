<h2>Recipes</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Category</th>
    <th>Description</th>
    <th>Published date</th>

  </tr>

<% @recipes.each do |recipe| %>
  <tr>
    <td><%= link_to recipe.title, recipe %></td>
    <td><%= link_to(recipe.category.name, recipe.category) if recipe.category %></td>
    <td><%= recipe.description %></td>
    <td><%= recipe.published_date %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Recipe', new_recipe_path %>
