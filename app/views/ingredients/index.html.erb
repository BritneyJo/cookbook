<h2>Ingredients</h2>

<table>
  <tr>
    <th>Name</th>
  </tr>

  <% @ingredients.each do |ingredient| %>
  <tr>
    <td><%= link_to ingredient.name, ingredient %></td>
  </tr>
  <% end %>
</table>

<br />

<% if current_user.role == "admin" %>
<%= link_to 'Add Ingredient', new_ingredient_path %>
<% end %>
