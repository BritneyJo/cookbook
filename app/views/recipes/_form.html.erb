<%= form_for(@recipe) do |f| %>

<div class="field">
    <%= f.label :category_id, 'Category' %><br />
    <%= f.select(:category_id, Category.all.map {|c| [c.name, c.id]} ) %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <% for ingredient in Ingredient.find(:all) %>
<div>
  <%= check_box_tag "ingredient[ingredient_ids][]", ingredient.id, @ingredient.ingredients.include?(ingredient) %>
  <%= ingredient.name %>
</div>
<% end %>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :published_date %><br />
    <%= f.date_select :published_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
