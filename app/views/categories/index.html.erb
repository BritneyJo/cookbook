<h2>Categories</h2>

<table>
  <tr>
    <th>Name</th>
  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= link_to category.name, category %></td>
  </tr>
<% end %>
</table>

<br />
<% if current_user && current_user.role == "admin" %>
<%= link_to 'Add Category', new_category_path %>
<% end %>