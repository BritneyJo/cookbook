<h2><%= @ingredient.name %></h2>

<p>
  <b>Recipes:</b><br>
<% @ingredient.recipes.each do |recipe| %>
<%= link_to recipe.title, recipe %><br>
<% end %>
</p>


<%= link_to 'Edit', edit_ingredient_path(@ingredient) %> |
<%= link_to 'Delete', @ingredient, method: :delete, data: { confirm: 'Are you sure?' } %> |
<%= link_to 'All Ingredients', ingredients_path %> |
<%= link_to 'Add Recipe', new_recipe_path %>
