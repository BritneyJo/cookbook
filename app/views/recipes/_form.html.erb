<%= form_for(@recipe) do |f| %>

<div class="field">
    <%= f.label :category_id, 'Category' %><br />
    <%= f.select(:category_id, Category.all.map {|c| [c.name, c.id]} ) %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :ingredient_id, 'Ingredients' %><br />
    <%= f.select(:ingredient_id, Ingredient.all.map {|c| [c.name, c.id]} ) %>
  </div>


  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :published_date %><br />
    <%= f.date_select :published_date %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
