<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rec9-e.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field">
  <%= f.label :title, 'Name:'%>
  <%= f.text_field :title, :autofocus => true %>
</div>

<div >
  <%= f.file_field :recipe_image %>
  <%= f.label :recipe_image %>
</div>

<div class="field">
    <%= f.label :category_id, 'Category:' %>
    <%= f.select(:category_id, Category.all.map {|c| [c.name, c.id]} ) %>
  </div>



Ingredients:
    <%= hidden_field_tag "recipe[ingredient_ids][]", nil %>
    <% Ingredient.all.each do |ingredient| %>
      <%= check_box_tag "recipe[ingredient_ids][]", ingredient.id, @recipe.ingredient_ids.include?(ingredient.id), id: dom_id(ingredient) %>
      <%= label_tag dom_id(ingredient), ingredient.name %>
    <% end %>

  <div class="field">
    <%= f.label :description, 'Description:' %>
    <%= f.text_area :description, size: "25x10" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
